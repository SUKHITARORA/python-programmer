import random
class fruitquiz:
    def __init__(self):
        self.fruits={'apple':'red',
                     'orange':'orange',
                     'watermelon':'green',
                     'banana':'yellow'}
    def quiz(self):
        while(True):
            fruit,color=random.choice(list(self.fruits.item()))
            print("What is the color of {}".format(fruit))
            user_answer=input()
            if(user_answer.lower() == color):
                print("correct answer")
            else:
                print("print Wrong answer")
                option= int(input("enter 0,if you want to play again otherwise enter 1:"))
                if (option):
                    break
            print("welcome to fruit quiz")
            fq=fruitquiz()
            fq.quiz()
